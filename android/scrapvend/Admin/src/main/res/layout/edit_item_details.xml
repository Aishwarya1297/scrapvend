<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_background"
    tools:context=".ui.pricing.UpdateItem">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="151dp"
        android:layout_height="152dp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/image_admin"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#fff"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/admin_addimage"
        android:clickable="true"
        android:textAllCaps="false"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Item name"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_add_item"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/editText3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Item rate"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_rate"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:background="@drawable/admin_item"
        android:text="Save  Changes"
        android:textColor="#fff"
        android:clickable="true"
        android:textSize="18dp"
        android:textAllCaps="false"/>

    <Spinner
        android:id="@+id/spinner_measure"
        android:layout_width="211dp"
        android:layout_height="37dp"
        android:layout_marginStart="96dp"
        android:layout_marginLeft="96dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/image_admin"
        android:layout_marginTop="410dp"/>

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="DELETE"
        android:textColor="#fff"
        android:layout_marginTop="540dp"
        android:layout_marginLeft="260dp"
        android:background="@drawable/delete_button"
        android:clickable="true"
        android:textSize="15dp"
        android:textAllCaps="false"/>

</RelativeLayout>