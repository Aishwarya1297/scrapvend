<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_background"
    tools:context=".ui.pricing.UpdateItem">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="151dp"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/image_admin"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textColor="#fff"
        android:layout_marginTop="220dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/admin_addimage"
        android:clickable="true"
        android:textSize="15dp"
        android:textAllCaps="false"/>

    <EditText
        android:id="@+id/editText2"
        android:inputType="textPersonName"
        android:hint="Name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_add_item"
        android:background="@android:color/transparent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="290dp"/>

    <EditText
        android:id="@+id/editText3"
        android:inputType="number"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:background="@android:color/transparent"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_adhaar"
        android:maxLines="1"
        android:hint="Adhaar Number" />

    <EditText
        android:id="@+id/editText"
        android:hint="Salary"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:background="@android:color/transparent"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_rate"
        android:maxLines="1"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:background="@android:color/transparent"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/ic_addresspick"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:hint="Rating"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="505dp"
        android:background="@drawable/admin_item"
        android:text="Save  Changes"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:clickable="true"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/button4"
        android:text="DELETE"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginTop="555dp"
        android:layout_marginLeft="260dp"
        android:background="@drawable/delete_button"
        android:clickable="true"
        android:textSize="15dp"
        android:textAllCaps="false"/>



</RelativeLayout>