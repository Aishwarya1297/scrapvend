<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin_background">

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="45dp"
        android:text="ADMIN"
        android:textColor="@color/green"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="45dp"
        android:text="DASHBOARD"
        android:textColor="@color/WhiteSmoke"
        android:textSize="28sp"/>

    <Button
        android:id="@+id/payment"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="470dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/payment_pick"
        android:text="PAYMENT"
        android:textColor="@android:color/background_light"
        android:clickable="true"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/unschedule_pickups"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/unschedule_pick"
        android:text="UNSCHEDULED PICKUPS"
        android:textColor="@android:color/background_light"
        android:clickable="true"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/schedule_pickups"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="230dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/schedule_pick"
        android:text="SCHEDULE PICKUPS"
        android:textColor="@android:color/background_light"
        android:clickable="true"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/working"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="310dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/working_pick"
        android:text="WORKING"
        android:textColor="@android:color/background_light"
        android:clickable="true"
        android:textSize="18dp"/>

    <Button
        android:id="@+id/onleave"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="390dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/onleave_pick"
        android:text="ON LEAVE"
        android:textColor="@android:color/background_light"
        android:clickable="true"
        android:textSize="18dp"/>
</RelativeLayout>