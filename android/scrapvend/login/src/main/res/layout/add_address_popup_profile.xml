<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="308dp"
    android:layout_height="408dp"
    android:layout_gravity="center"
    android:background="@drawable/rectangle_border"
    android:orientation="vertical">
        <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@drawable/admin_background"
            android:orientation="vertical">
    <TextView
        android:id="@+id/txtclose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textSize="20dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:clickable="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Add New Address"
        android:layout_gravity="center"
        android:textColor="@color/DarkRed"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        />

    <EditText
            android:id="@+id/house_no"
            android:layout_gravity="center"
            android:layout_width="@dimen/app_bar_height"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:hint="house_no"
            android:padding="10dp"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_home_black"
            android:textColorHint="@color/Black"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/line1"
            android:layout_gravity="center"
            android:layout_width="@dimen/app_bar_height"
            android:layout_height="wrap_content"
            android:hint="Street"
            android:textAlignment="center"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_home_black"
            android:textSize="20dp"

            android:textColorHint="@color/Black"
            android:paddingLeft="10dp"/>

        <EditText
            android:id="@+id/city"
            android:layout_gravity="center"
            android:layout_width="@dimen/app_bar_height"
            android:layout_height="wrap_content"
            android:hint="City"
            android:padding="10dp"
            android:textAlignment="center"
            android:textColorHint="@color/Black"
            android:drawableLeft="@drawable/ic_location_city"
            android:textSize="20dp"
            android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/state"
        android:layout_gravity="center"
        android:layout_width="@dimen/app_bar_height"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:hint="State"
        android:textColorHint="@color/Black"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_location_city"
        android:textSize="20dp"
        android:paddingLeft="10dp"/>

    <EditText
        android:id="@+id/zip_code"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_width="@dimen/app_bar_height"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:padding="10dp"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:drawableLeft="@drawable/ic_format_zipcode"
        android:textColorHint="@color/Black"/>

    <Button
        android:id="@+id/add_address"
        android:layout_width="@dimen/app_bar_height"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAllCaps="true"
        android:layout_margin="10dp"
        android:textStyle="bold"
        android:text="Add"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="490dp"
        android:background="@drawable/admin_item"
        android:textColor="#fff"
        android:clickable="true"/>

    </LinearLayout>
</LinearLayout>