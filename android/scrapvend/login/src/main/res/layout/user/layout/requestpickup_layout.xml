<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@drawable/admin_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:padding="5dp"
        android:text="Selected Item list"
        android:textColor="#000"
        android:textSize="20dp"
        app:fontFamily="serif" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>
    <ListView
        android:id="@+id/selectedlist"
        android:layout_width="match_parent"
        android:layout_height="151dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="179dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="173dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:text="Estimated Weight"
                android:textColor="#000"
                android:textSize="20dp"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:text="Pickup Date"
                android:textColor="#000"
                android:textSize="20dp"
                app:fontFamily="serif" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:text="Pickup Time"
                android:textColor="#000"
                android:textSize="20dp"
                app:fontFamily="serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="173dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/estimated_weight"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/rectangle_border"
                android:ems="10"
                android:hint="IN KG"
                android:inputType="number|textEmailAddress"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pickupdate"
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/rectangle_border"
                    android:ems="10"
                    android:hint="yyyy-mm-dd"
                    android:inputType="date"
                    android:padding="5dp" />

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/calender_favicon"
                    android:background="#000"/>
            </LinearLayout>


            <Spinner
                android:id="@+id/pickuptime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="3dp"
                android:layout_centerHorizontal="true"
                android:padding="5dp"
                android:text="20dp"
                android:textSize="20dp" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/contactno"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:textColor="#000"
        android:textSize="20dp"
        app:fontFamily="serif"
        android:gravity="center"
        android:background="@drawable/rectangle_border"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textColor="#000"
        android:textSize="20dp"
        app:fontFamily="serif"
        android:background="@drawable/rectangle_border"/>

    <Button
        android:id="@+id/bookpickup"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Book Pickup"
        android:textColor="#fff"
        android:layout_gravity="end"
        android:background="@drawable/admin_item"/>



</LinearLayout>